<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>

    <!-- Enable reverse proxy -->
    <proxy>
      <reverseProxy enabled="true" />
    </proxy>

    <!-- Static content -->
    <staticContent>
      <mimeMap fileExtension=".webp" mimeType="image/webp" />
    </staticContent>

    <rewrite>
      <rules>

        <!-- Serve media files directly via IIS -->
        <rule name="ServeMediaDirectly" stopProcessing="true">
          <match url="^media/(.*)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- Reverse proxy to Django -->
        <rule name="ReverseProxyToDjango" stopProcessing="true">
          <match url="(.*)" />

          <!-- Forward original host + scheme -->
          <serverVariables>
            <set name="HTTP_X_FORWARDED_PROTO" value="https" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
          </serverVariables>

          <action
            type="Rewrite"
            url="http://127.0.0.1:8000/{R:1}"
            appendQueryString="true"
          />
        </rule>

      </rules>
    </rewrite>

  </system.webServer>
</configuration>
